"""
delay_test_synapse_plastic
##########################
"""
synapse delay_test_synapse_plastic:
  state:
    x ms = 0 ms
    w real = 1   @nest::weight   # Synaptic weight
    d ms = 1 ms    @nest::delay   # Synaptic transmission delay

  input:
    pre_spikes <- spike

  onReceive(pre_spikes):
    deliver_spike(w, d)

  update:
    x = d
